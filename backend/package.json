{
  "name": "hookcode-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "dev": "nest start --watch",
    "dev:tools": "ts-node-dev --respawn --transpile-only src/adminTools/standalone.ts",
    "dev:worker": "WORKER_PREFERRED=true ts-node-dev --respawn --transpile-only src/worker.ts",
    "start:dev": "nest start --watch",
    "build": "node scripts/prisma-run.js generate && tsc -p tsconfig.json",
    "prisma:generate": "node scripts/prisma-run.js generate",
    "db:migrate": "node scripts/prisma-run.js migrate deploy",
    "db:migrate:dev": "node scripts/prisma-run.js migrate dev",
    "db:reset": "node scripts/prisma-run.js migrate reset --force",
    "db:push": "node scripts/prisma-run.js db push",
    "db:pull": "node scripts/prisma-run.js db pull",
    "db:studio": "node scripts/prisma-run.js studio",
    "db:status": "node scripts/prisma-run.js migrate status",
    "docker:up:nobuild": "docker compose -f ../docker/docker-compose.yml up -d backend worker",
    "docker:up": "docker compose -f ../docker/docker-compose.yml up -d --build backend worker",
    "start": "node dist/main.js",
    "start:worker": "node dist/worker.js",
    "lint": "echo \"add backend linting (eslint) later\"",
    "pretest": "node scripts/prisma-run.js generate",
    "test": "jest -c jest.config.cjs --passWithNoTests",
    "test:integration": "jest -c jest.integration.config.cjs --runInBand",
    "test:watch": "jest -c jest.config.cjs --watch"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.6",
    "@google/gemini-cli": "^0.23.0",
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/swagger": "^7.0.0",
    "@openai/codex-sdk": "^0.93.0",
    "@prisma/adapter-pg": "^6.19.1",
    "@prisma/client": "^6.19.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "nodemailer": "^7.0.12",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "yaml": "^2.4.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/testing": "^10.4.20",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.18.1",
    "jest": "^30.2.0",
    "prisma": "6",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3",
    "ws": "^8.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
